<%= form_for [:admin, @event] do |f| %>

  <div class="form-group"><%= f.label :start_time, "Start date & time" %><br>
    <%= f.datetime_select :start_time %></div>

  <div class="form-group"><%= f.label :end_time, "End date & time" %><br>
    <%= f.datetime_select :end_time %></div>

  <div class="form-group">
    <%= f.label :space %><br>
    Enter the space ID if you know it, or select a space from the list below<br />
    <%= f.text_field :space_id %>
  </div>

  <div><%= f.submit "Update" %></div>
<% end %>
